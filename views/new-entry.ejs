<%- include('partials/header'); -%>
    <h1 class="mt-3 mb-5 text-center">
        <%= title %>
    </h1>
    <div class="col-xs-8 xs-offset-2 border border-dark rounded">
        <h2 class="text-center my-5">Write a new entry</h2>
        <form class="needs-validation" method="POST" novalidate>
            <div class="form-group px-2">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter some title here.
                </div>
            </div>
            <div class="form-group px-2">
                <label for="body">Entry text</label>
                <textarea class="form-control" id="body" name="body" required></textarea>
                <div class="invalid-feedback">
                    Please enter some text here.
                </div>
            </div>
            <div class="form-group text-center px-2">
                <button class="btn btn-primary" type="submit">Post entry</button>
            </div>

        </form>
    </div>
    <%- include('partials/footer'); -%>